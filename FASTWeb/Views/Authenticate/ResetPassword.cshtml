@model FASTWeb.Models.RegistrationModel
@{
    ViewBag.Title = "Reset Password";
}


<div class="row">
    <div class="col-md-12">
        <section id="restForm">
            @using (Html.BeginForm("ResetPassword", "Authenticate", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div style="padding-left:0px">
                    <br/>
                    <center><img src="~/images/fastrack_login.png" width="250" /></center>
                </div>
                <hr />
                <div class="form-group col-md-12">
                    <center>
                        @Html.LabelFor(m => m.EmployeeID, new { @class = "control-label", @style = "font-size:14px;color:#e60000" })
                        <div class="col-md-12">
                            @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control", @style = "font-size:25px;text-align:center" })
                            @Html.ValidationMessageFor(m => m.EmployeeID)
                        </div>
                    </center>
                </div>
                <div class="form-group col-md-12">
                    <center>
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-primary" value="Reset Password" onclick="showProgressBar()"/>
                        </div>
                    </center>
                </div>
            }
        </section>
    </div>
    
  
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
