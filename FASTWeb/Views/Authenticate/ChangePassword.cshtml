@model FASTWeb.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
}
<center>
    <div class="row">
        <div class="col-lg-12">
            <section id="loginForm">
                @using (Html.BeginForm("ChangePassword", "Authenticate", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                    <h2>@ViewBag.Title</h2>
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(m => m.Username, new { @class = "col-md-5 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" , @Value= User.Identity.Name, @readonly=true})
                            @Html.ValidationMessageFor(m => m.Username)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @style = "font-size:25px;text-align:center" })
                            @Html.ValidationMessageFor(m => m.OldPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
                        <div class="col-md-4">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @style = "font-size:25px;text-align:center" })
                            @Html.ValidationMessageFor(m => m.NewPassword)
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-offset-2 col-lg-11">
                            <input type="submit" value="Change Password" class="btn btn-primary" />
                        </div>
                    </div>
            }
            </section>
        </div>


    </div>
</center>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}