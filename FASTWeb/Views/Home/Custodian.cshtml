@using Common;
@{
    ViewBag.Title = "Property Custodians";

    List<vwAssetAssignmentsForCustodian> forAcceptance = ViewBag.Acceptances;
    List<vwFixAssetList> forRepair = ViewBag.Repairs;
    List<vwFixAssetList> released = ViewBag.Releases;

    var listAcceptance = new WebGrid(forAcceptance, canPage: true, rowsPerPage: 20, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "listContainer");
    listAcceptance.Pager(WebGridPagerModes.NextPrevious);

    var listRepair = new WebGrid(forRepair, canPage: true, rowsPerPage: 20, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "listContainer");
    listRepair.Pager(WebGridPagerModes.NextPrevious);

    var listReleased = new WebGrid(released, canPage: true, rowsPerPage: 20, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "listContainer");
    listReleased.Pager(WebGridPagerModes.NextPrevious);

}
<br />

<div class="container-fluid">

    <div>
        <div class="panel-info col-lg-3">
            <div class="panel-heading">
                <span class="panel-title" />
            </div>
            <div class="panel-body" style="background-color:aliceblue">
                <center>
                    <img src="~/Images/custodian.png" width="200" height="200" class="img-rounded" />
                </center>
            </div>
            <div class="panel-body" style="background-color:whitesmoke">
                @using (Html.BeginForm("TrackAsset", "FixAsset", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Asset Tag" id="assetTag" name="assetTag">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit">Track</button>
                        </span>
                    </div>
                }
            </div>
            <div class="panel-body panel-primary" style="background-color:whitesmoke">
                <div class="panel-heading">
                    <h4 class="panel-title">Manage</h4>
                </div>
                <div class="list-group list-group-item-info">
                    <a class="list-group-item" href="@Url.Action("Index","FixAsset")"><span class="glyphicon glyphicon-th-list text-danger" aria-hidden="true"></span>Fix Assets</a>
                    <a class="list-group-item" href="@Url.Action("Unavailable","Home")"><span class="glyphicon glyphicon-th-list text-danger" aria-hidden="true"></span>Assignments</a>
                </div>
                <div class="panel-heading">
                    <h4 class="panel-title">Bulk Uploads</h4>
                </div>
                <div class="list-group list-group-item-info">
                    <a class="list-group-item" href="@Url.Action("UploadAssets","FixAsset")"><span class="glyphicon glyphicon-th-list text-danger" aria-hidden="true"></span>New Fix Assets</a>
                    <a class="list-group-item" href="@Url.Action("UploadAssignments","Assignment")"><span class="glyphicon glyphicon-th-list text-danger" aria-hidden="true"></span>New Assignments</a>
                </div>
                <div class="panel-heading">
                    <h4 class="panel-title">Reports</h4>
                </div>
                <div class="list-group list-group-item-info">
                    <div class="btn-group btn-block">
                        <div class="btn-group btn-block">
                            <a class="list-group-item dropdown-toggle btn-block" aria-expanded="true" href="#" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>Fix Asset Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="list-group-item" href="@Url.Action("Index","FixAsset")">List of Assets</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Assets Per Department</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Unassigned Assets</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Assets for Repair</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Assets Under Repair</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Assets Per Useful Life</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="btn-group btn-block">
                        <div class="btn-group btn-block">
                            <a class="list-group-item dropdown-toggle btn-block" aria-expanded="true" href="#" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>Assignment Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">List of Assignments per Department</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Employee Accountability Form</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Employee Asset Assignment History</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="btn-group btn-block hidden">
                        <div class="btn-group btn-block">
                            <a class="list-group-item dropdown-toggle btn-block" aria-expanded="true" href="#" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>Summary Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 1</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 2</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 3</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="btn-group btn-block hidden">
                        <div class="btn-group btn-block">
                            <a class="list-group-item dropdown-toggle btn-block" aria-expanded="true" href="#" data-toggle="dropdown">

                                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>Other Reports
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 1</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 2</a></li>
                                <li><a class="list-group-item" href="@Url.Action("Unavailable","Home")">Report 3</a></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
         
            <div class="panel-body" style="background-color:snow;height:50px">
            </div>


        </div>
        <div class="panel-info col-lg-9">
            <div class="panel-info">
                <div class="panel-body" style="height: 200px;background-image:url('../Images/fujitsu_infinity_1.png');background-repeat:no-repeat;background-position:right">
                    <h2>Property Custodians</h2>
                    @*<blockquote>
                            <h4>Number of employees : 12</h4>
                            <h4>Number of assets assigned :</h4>
                        </blockquote>*@
                    <a href="#acceptances"><span class="glyphicon glyphicon-bookmark text-success"></span>For Acceptance <span class="badge">(@forAcceptance.Count())</span></a><br />
                    <a href="#repairs"><span class="glyphicon glyphicon-bookmark text-success"></span>For Repair <span class="badge">(@forRepair.Count())</span></a><br />
                    <a href="#releases"><span class="glyphicon glyphicon-bookmark text-success"></span>Released <span class="badge">(@released.Count())</span></a><br />
                </div>
            </div>
            <br />
            <hr />
            <div class="panel-info">
                <a name="acceptances"></a>
                <div class="panel-heading">
                    <h3 class="panel-title">Waiting for Acceptance</h3>
                </div>
                <div class="panel-body">
                    <div class="panel-body">
                        @listAcceptance.GetHtml(tableStyle: "table table-striped table-hover", headerStyle: "header", alternatingRowStyle: "alternateRow", selectedRowStyle: "select",
                                columns: listAcceptance.Columns(
                                listAcceptance.Column("AssetAssignmentID", "Assign ID", canSort: true, style: "col-lg-2"),
                                listAcceptance.Column("AssetTag", "Asset Tag", canSort: true, style: "col-lg-3"),
                                listAcceptance.Column("StatusDescription", "Asset Status", canSort: false, style: "col-lg-2"),
                                listAcceptance.Column("AssignmentStatus", "Assignment Status", canSort: false, style: "col-lg-2")
                                //list.Column(format: (item) => Html.ActionLink("Edit", "EditEmployee", new { mod = item.EmployeeID }), style: "column-action")
                     ))
                    </div>
                </div>
            </div>
            <div class="panel-info">
                <a name="repairs"></a>
                <div class="panel-heading">
                    <h3 class="panel-title">Repairs</h3>
                </div>
                <div class="panel-body">
                    <div class="panel-body">
                        @listRepair.GetHtml(tableStyle: "table table-striped table-hover", headerStyle: "header", alternatingRowStyle: "alternateRow", selectedRowStyle: "select",
                                columns: listRepair.Columns(
                                listRepair.Column("FixAssetID", "Asset ID", canSort: true, style: "col-lg-2"),
                                listRepair.Column("AssetTag", "Asset Tag", canSort: true, style: "col-lg-3"),
                                listRepair.Column("SerialNumber", "Serial No", canSort: true, style: "col-lg-2"),
                                listRepair.Column("TypeDescription", "Asset Type", canSort: false, style: "col-lg-2"),
                                listRepair.Column("Brand", "Brand", canSort: false, style: "col-lg-2"),
                                listRepair.Column(format: (item) => Html.ActionLink("Manage", "Unavailable", "Home", null, new { @class = "" }), style: "column-action")
                     ))
                    </div>
                </div>
            </div>
            <div class="panel-info">
                <a name="releases"></a>
                <div class="panel-heading">
                    <h3 class="panel-title">Released Assets</h3>
                </div>
                <div class="panel-body">
                    <div class="panel-body">
                        @listReleased.GetHtml(tableStyle: "table table-striped table-hover", headerStyle: "header", alternatingRowStyle: "alternateRow", selectedRowStyle: "select",
                                columns: listReleased.Columns(
                                listReleased.Column("FixAssetID", "Asset ID", canSort: true, style: "col-lg-2"),
                                listReleased.Column("AssetTag", "Asset Tag", canSort: true, style: "col-lg-3"),
                                listReleased.Column("SerialNumber", "Serial No", canSort: true, style: "col-lg-2"),
                                listReleased.Column("TypeDescription", "Asset Type", canSort: false, style: "col-lg-2"),
                                listReleased.Column("Brand", "Brand", canSort: false, style: "col-lg-2"),
                                listReleased.Column(format: (item) => Html.ActionLink("Manage", "Unavailable", "Home", null, new { @class = "" }), style: "column-action")
                     ))
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<br />